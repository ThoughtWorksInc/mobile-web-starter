.AppDrawerNav {
  padding: 0;
  margin: 0;
}

.AppDrawerNav__item {
  padding: 0;
  margin: 0;

  & > * {
    padding: 16px 18px;
    display: block;
    text-decoration: none;
    color: $color-black;
    text-transform: uppercase;

    & > .icon {
      font-size: 1.6em;
      float: left;
      line-height: 1;
      top: -0.2em;
      margin-right: 0.5em;
    }

    &:hover,
    &.active {
      background-color: $color-grey-light;
    }
  }
}