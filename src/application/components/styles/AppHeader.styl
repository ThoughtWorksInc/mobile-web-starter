$app-header-height = 50px;

.AppHeader {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: $app-header-height;

  background-color: $color-blue-dark;
  color: $color-white;
}

.AppHeader__title {
  margin: 0;
  height: $app-header-height;
  line-height: @height;
  text-align: center;
  font-weight: normal;
  font-size: 20px;
  text-transform: uppercase;
}

.AppHeader__btn {
  position: absolute;
  top: 0;
  left: 0;
  height: $app-header-height;
  width: @height;
  line-height: @height;
  text-align: center;
  .icon {
    font-size: 1.5em;
  }
  &:active {
    background-color: $color-blue;
  }
}

